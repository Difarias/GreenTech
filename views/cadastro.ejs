<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= title %></title>
<link rel="stylesheet" href="../styles/cadastro.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
  <header>
    <div class="logo">
      <img src="./images/logo.jpeg" alt="GreenTech Logo" height="50">
      <span>GreenTech</span>
    </div>
    <nav>
      <ul>
        <li><a href="#">Eletrônicos</a></li>
        <li><a href="#">Gadgets</a></li>
        <li><a href="#">Casa</a></li>
        <li><a href="#">Rural</a></li>
      </ul>
    </nav>
    <div class="header-icons">
      <a href="#"><i class="fas fa-shopping-cart"></i></a>
      <a href="#"><i class="fas fa-user"></i></a>
    </div>
  </header>

  <div class="form-container">
    <form id="form">
      <!-- Slice 1: Dados Pessoais -->
      <div class="form-slice active" id="slice1">
        <h2>Dados Pessoais</h2>
        <div class="input-group">
          <i class="fas fa-user"></i>
          <input type="text" id="nome_cadastro" name="nome" placeholder="Nome" required>
        </div>
        <div class="input-group">
          <i class="fas fa-id-card"></i>
          <input type="text" id="cpf_cadastro" name="cpf" placeholder="CPF" required>
        </div>
        <div class="input-group">
          <i class="fas fa-envelope"></i>
          <input type="email" id="email_cadastro" name="email" placeholder="E-mail" required>
        </div>
        <div class="input-group">
          <i class="fas fa-phone-alt"></i>
          <input type="tel" id="telefone_cadastro" name="telefone" placeholder="Telefone" required>
        </div>
        <div class="input-group">
          <i class="fas fa-calendar-alt"></i>
          <input type="date" id="dtaNascimento_cadastro" name="dataNascimento" placeholder="Data de Nascimento" required>
        </div>
        <button type="button" onclick="nextSlice()">Próximo</button>
      </div>

      <!-- Slice 2: Endereço -->
      <div class="form-slice" id="slice2">
        <h2>Endereço</h2>
        <div class="input-group">
          <i class="fas fa-map-marker-alt"></i>
          <input type="text" id="cep_cadastro" name="cep" placeholder="CEP" required>
        </div>
        <div class="input-group">
          <i class="fas fa-road"></i>
          <input type="text" id="rua_cadastro" name="rua" placeholder="Rua" required>
        </div>
        <div class="input-group">
          <i class="fas fa-building"></i>
          <input type="text" id="bairro_cadastro" name="bairro" placeholder="Bairro" required>
        </div>
        <div class="input-group">
          <i class="fas fa-home"></i>
          <input type="text" id="logradouro_cadastro" name="logradouro" placeholder="Logradouro">
        </div>
        <div class="input-group">
          <i class="fas fa-city"></i>
          <input type="text" id="cidade_cadastro" name="cidade" placeholder="Cidade" required>
        </div>
        <div class="input-group">
          <i class="fas fa-flag"></i>
          <input type="text" id="estado_cadastro" name="estado" placeholder="Estado" required>
        </div>
        <button type="button" onclick="prevSlice()">Voltar</button>
        <button type="button" onclick="nextSlice()">Próximo</button>
      </div>

      <!-- Slice 3: Senha -->
      <div class="form-slice" id="slice3">
        <h2>Senha</h2>
        <div class="input-group">
          <i class="fas fa-lock"></i>
          <input type="password" id="senha_cadastro" name="senha" placeholder="Senha" required>
        </div>
        <div class="input-group">
          <i class="fas fa-lock"></i>
          <input type="password" name="confirmarSenha" placeholder="Confirmar Senha" required>
        </div>
        <button type="button" onclick="prevSlice()">Voltar</button>
        <button type="submit" onclick="cadastroUsuario()">Enviar</button>
      </div>
    </form>
  </div>

  <footer>
    <p>Desenvolvido por Diêgo Farias e Isaias Mendes</p>
  </footer>

  <script>
    function nextSlice() {
      var currentSlice = document.querySelector('.form-slice.active');
      var inputs = currentSlice.querySelectorAll('input[required]');
      var valid = true;

      inputs.forEach(function(input) {
        if (!input.value) {
          valid = false;
        }
      });

      if (!valid) {
        alert('Por favor, preencha todos os campos obrigatórios.');
        return;
      }

      var nextSlice = currentSlice.nextElementSibling;
      if (nextSlice !== null) {
        currentSlice.classList.remove('active');
        nextSlice.classList.add('active');
      }
    }

    function prevSlice() {
      var currentSlice = document.querySelector('.form-slice.active');
      var prevSlice = currentSlice.previousElementSibling;
      if (prevSlice !== null) {
        currentSlice.classList.remove('active');
        prevSlice.classList.add('active');
      }
    }
  
    function cadastroUsuario() {
      event.preventDefault();

      const dados = {
        nome: document.getElementById('nome_cadastro').value,
        cpf: document.getElementById('cpf_cadastro').value,
        email: document.getElementById('email_cadastro').value,
        telefone: document.getElementById('telefone_cadastro').value,
        dataNascimento: document.getElementById('dtaNascimento_cadastro').value,
        endereco: {
          cep: document.getElementById('cep_cadastro').value,
          rua: document.getElementById('rua_cadastro').value,
          bairro: document.getElementById('bairro_cadastro').value,
          logradouro: document.getElementById('logradouro_cadastro').value,
          cidade: document.getElementById('cidade_cadastro').value,
          estado: document.getElementById('estado_cadastro').value
        },
        senha: document.getElementById('senha_cadastro').value,
        confirmarSenha: document.querySelector('input[name="confirmarSenha"]').value
      };

      if (dados.senha !== dados.confirmarSenha) {
        alert('As senhas não coincidem.');
        return;
      }
      console.log(dados)
      fetch('/clientes/cadastro', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(dados)
      })
      .then(response => {
        if (!response.ok) {
          throw new Error('Erro ao tentar cadastrar');
        }
        return response.json();
      })
      .then(data => {
        alert('Cadastro realizado com sucesso!');
        window.location.href = '/login';
      })
      .catch(error => {
        console.error('Erro ao fazer cadastro', error);
        alert('Erro ao fazer cadastro. Tente novamente mais tarde.');
      });
      }
  </script>
</body>
</html>
